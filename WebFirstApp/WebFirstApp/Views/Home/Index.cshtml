@*model List<Students>;*@
@model WebFirstApp.Models.Students
<html xmlns="http://www.w3.org/1999/xhtml">
<head>
    <title></title>
</head>
<body>
    <div>
        <table>
            <tr>
                <th>
                    Id
                </th>
                <th>
                    Name
                </th>
                <th>
                    SurName
                </th>
            </tr>
            @if (Model.Id != null)
            {
                <tr>
                    <th>@Model.Id</th>
                    <th>@Model.Name</th>
                </tr>
            }
            else
            {
                for (int i = 0; i < Model.Id; i++)
                {
                    <tr>
                        <th>@Model.SurName[i]</th>
                        <th>@Model.Name[i]</th>

                    </tr>
                }
            }





        </table>
    </div>
</body>
</html>
